@model MSUniversity.Models.Department

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="col-form-label">
    <h3>Create Deaprtment</h3>
    <hr>
</div>
<div>
    @ViewBag.Message
</div>
@using (Html.BeginForm("Create", "Departments", FormMethod.Post))
{
    <div class="form-horizontal">
        <div class="form-group">
            @*@Html.LabelFor(m => m.Name,new { @class = "control-label col-md-2" })*@
            <div class="col-md-10 col-lg-4">
                @Html.EditorFor(m => m.Name, new { htmlAttributes = new { @class = "form-control", @placeholder = "Name" } })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-10 col-lg-4">
                @Html.EditorFor(m=>m.Code,new {htmlAttributes=new {@class="form-control",@placeholder="Code"} })
            </div>
        </div>
        <div class="col-md-10">
            <input type="submit" value="Save" class="btn btn-success col-lg-1" />
        </div>
    </div>

}