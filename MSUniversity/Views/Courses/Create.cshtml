@model MSUniversity.Models.Course

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Add Course</h2>
<hr>
<div>
    @ViewBag.Message
</div>
@using (Html.BeginForm("Create", "Courses", FormMethod.Post))
{
<div class="form-horizontal">
    <div class="form-group">
        <div class="col-md-10 col-lg-4">
            @Html.EditorFor(m => m.Code, new { htmlAttributes = new { @class = "form-control", @placeholder = "Code" } })
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-10 col-lg-4">
            @Html.EditorFor(m => m.Name, new { htmlAttributes = new { @class = "form-control", @placeholder = "Name" } })
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-10 col-lg-4">
            @Html.EditorFor(m => m.Credit, new { htmlAttributes = new { @class = "form-control", @placeholder = "Credit" } })
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-10 col-lg-4">
            @Html.EditorFor(m => m.Description, new { htmlAttributes = new { @class = "form-control", @placeholder = "Description" } })
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-10 col-lg-4">
            @Html.DropDownListFor(m=>m.DepartmentId,null, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-10 col-lg-4">
            @Html.EnumDropDownListFor(m => m.Semester, new { @class = "form-control" })
        </div>
    </div>
</div>
    <div class="col-md-10">
        <input type="submit" value="Save" class="btn btn-success col-lg-1" />
    </div>
}
